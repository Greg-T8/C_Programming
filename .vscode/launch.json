{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "LLDB: Debug",
            "type": "lldb",
            "request": "launch",
            "stopOnEntry": false,
            "console": "internalConsole",
            "internalConsoleOptions": "neverOpen",
            "program": "${fileDirname}/${fileBasenameNoExtension}",
            "preLaunchTask": "GCC Build"
        },
        {
            "name": "GDB: Debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${fileDirname}/${fileBasenameNoExtension}",
            "cwd": "${fileDirname}",
            "externalConsole": false,
            "internalConsoleOptions": "neverOpen",
            "showDisplayString": false,
            "MIMode": "gdb",
            "preLaunchTask": "GCC Build",
            "miDebuggerPath": "/usr/bin/gdb"
        },
    ]
}